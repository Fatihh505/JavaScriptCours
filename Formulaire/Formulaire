    <!-- HTML -->
    <button id="darkModeToggle">üåì Mode Sombre</button> <!-- (darkModeToggle) permet de basculer d un mode a l'autre-->
    
    <!-- CSS -->
    <style>
    body {
        transition: background-color 0.3s, color 0.3s; /* Rend la transition un peu plus fluide avec une transition legere pour le background-color et color */
    }
    
    body.dark-mode { /* D√©finit les styles du mode sombre : arri√®re-plan sombre et texte clair. */
        background-color: #333;
        color: #fff;
    }
    
    #darkModeToggle {
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        background-color: #555;
        color: white;
    }
    </style>
    
    <!-- JavaScript -->
    <script>
    const darkModeToggle = document.getElementById('darkModeToggle');
    const body = document.body;
    
    // V√©rifie si le mode sombre √©tait activ√© pr√©c√©demment
    if (localStorage.getItem('darkMode') === 'enabled') {
        body.classList.add('dark-mode');
    }
    
    darkModeToggle.addEventListener('click', () => {
        body.classList.toggle('dark-mode');
        
        // Souvenir du choix de l'utilisateur
        if (body.classList.contains('dark-mode')) {
            localStorage.setItem('darkMode', 'enabled');
        } else {
            localStorage.setItem('darkMode', null);
        }
    }); 
    // Mode sombre activ√© :L'utilisateur clique sur le bouton.
    // JavaScript applique la classe dark-mode.
    // Les styles associ√©s √† dark-mode (dans le CSS) changent l'apparence de la page.
    // La pr√©f√©rence de l'utilisateur est enregistr√©e dans (localStorage).
    // Mode sombre d√©sactiv√© :L'utilisateur reclique sur le bouton.
    // JavaScript retire la classe dark-mode.La page revient √† ses styles par d√©faut.
    // La pr√©f√©rence est effac√©e de localStorage
    </script>
    </footer>
